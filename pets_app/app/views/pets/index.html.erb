<div>
  <h1>All of the Pets!</h1>

<!-- <a href="/pets/new">Add a New Pet!</a> -->
  <h3><%= link_to 'Add a New Pet!', new_pet_path %></h3>

<!-- this iterates through the list of pets  -->
    <% @pets.each do |pet| %>
  <ul>
<!-- this displays each of the pet names, along with their id paths (1, 2, 3) -->
    <%= link_to pet[:pet_name], pet_path(pet) %>
  </ul>
  
  <br />

  <%= button_to 'Delete', pet, :method => 'delete', data: {confirm: 'Are you sure you want to delete this pet?'} %>

  <% end %>

</div>
